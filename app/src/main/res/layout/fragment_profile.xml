<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingHorizontal="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="28dp"
            android:text="USER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#123456"
            android:text="1개 기기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout> <!-- user information -->

    <LinearLayout
        android:layout_marginVertical="5dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/bg_white_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/vector_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:clickable="true"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="장치 설정"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/vector_right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <View
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/vector_notification"
                android:tint="#A2CD48"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:clickable="true"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="알림 설정"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/vector_right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <View
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/select_law"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/vector_attribution"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="법률 정보 및 개인정보 관리"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/vector_right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <View
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/select_appinfo"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/vector_appinfo"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="앱 정보"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/vector_right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout> <!-- 1st box -->

    <LinearLayout
        android:layout_marginVertical="5dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/bg_white_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/select_cs"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/vector_info"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="고객센터"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/vector_right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout> <!-- 2nd box -->

    <LinearLayout
        android:layout_marginVertical="5dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/bg_white_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:clickable="true"
            android:id="@+id/select_help"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/vector_help"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="도움말"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/vector_right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <View
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/select_logout"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/vector_logout"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="로그아웃"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/vector_right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout> <!-- 3rd box -->



</LinearLayout>