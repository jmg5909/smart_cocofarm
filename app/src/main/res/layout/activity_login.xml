<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="45dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/main_logo" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/round_text"
        android:drawableLeft="@drawable/customise_left_image_mail"
        android:hint="이메일"
        android:textColor="#3C3C3C"
        android:textColorHint="#858484"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/round_text"
        android:drawableLeft="@drawable/customise_left_image_pw"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColor="#3C3C3C"
        android:textColorHint="#858484"
        android:textSize="14dp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chk_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#A2CD48"
            android:checked="false"
            android:text="자동 로그인"
            android:textColor="#858484"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:text="로그인"
            android:textColor="#A2CD48"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#858484" />
        <TextView
            android:textStyle="bold"
            android:textColor="#858484"
            android:layout_marginHorizontal="10dp"
            android:text="SNS로 로그인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#858484" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/logo_kakao"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
        <ImageView
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/logo_naver"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
        <ImageView
            android:src="@drawable/logo_google"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
    </LinearLayout>

</LinearLayout>